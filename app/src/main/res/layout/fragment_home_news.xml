<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="vm"
                type="com.sigmapool.app.screens.news.vm.NewsListVM"
                />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:background="#EFF3F7"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_news"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="start"
                android:fontFamily="@font/google_sans_bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                />

        <include
                layout="@layout/fragment_news_list"
                app:vm="@{vm}"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@{vm.itemsVM.message}"

                app:goneIfBlank="@{vm.itemsVM.message}"

                />

    </LinearLayout>

</layout>