<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>
        <variable name="vm" type="com.sigmapool.app.screens.home.coin.CoinsVM"/>
        <variable name="fragmentManager" type="androidx.fragment.app.FragmentManager"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="#EFF3F7"
    >

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"

                android:layout_height="300dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                app:initCoinAdapter="@{vm}"
                app:fragmentManager="@{fragmentManager}"
        >

        </androidx.viewpager.widget.ViewPager>


        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabDots"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:pager="@{(pager)}"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"/>

    </LinearLayout>

</layout>