<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteSelectableItemTheme">
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="RippleView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="RubView" parent="RippleView">
        <item name="android:src">@drawable/vector_ruble</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ic_rub_background</item>
    </style>

    <style name="BackBtnStyle" parent="RippleView">
        <item name="android:src">@drawable/ic_back_white</item>
        <item name="android:theme">@style/WhiteSelectableItemTheme</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="WhiteArrowUpBtn" parent="RippleView">
        <item name="android:background">@drawable/arrow_up_background_ripple</item>
        <item name="android:drawableEnd">@drawable/arrow_up</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

</resources>
